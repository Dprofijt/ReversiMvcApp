@model IEnumerable<ReversiMvcApp.Models.Spel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Omschrijving)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Speler1Token)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Speler1Naam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Speler2Token)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Speler2Naam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AanDeBeurt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Omschrijving)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Speler1Token)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Speler1Naam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Speler2Token)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Speler2Naam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AanDeBeurt)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Token">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Token">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Token">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
